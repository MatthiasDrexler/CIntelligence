{
	"compilerOptions": {
		"module": "commonjs",
        "rootDir": "src",
		"outDir": "out",
        "strict": true,
		"target": "ES2020",
		"lib": [
			"ES2020"
		],
		"sourceMap": true,
		/* Additional Checks */
        "noImplicitOverride": true,
		"noImplicitReturns": true,
		"noUnusedParameters": true,
        "noUnusedLocals": true,
		"noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "noErrorTruncation": true
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
